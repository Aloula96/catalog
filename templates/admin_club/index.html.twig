{% extends 'base.html.twig' %}

{% block title %}Hello AdminCategorieController!{% endblock %}

  {% block body %}
  {# Form to add a new club #}
  {# {{ form_start(form) }}
      {{ form_row(form.label) }}
      <button type="submit" class="btn btn-primary">Submit</button>
  {{ form_end(form) }} #}

  {# Table of clubs #}
     
  <a href="{{ path('app_admin_club_add')}}" type="submit">Add a club</a>
  <table class="table table-striped">
      <thead>
          <tr>
              <th>clubs</th>
              <th>Lire</th>
              <th>Modifier</th>
              <th>Supprimer</th>
          </tr>
      </thead>
      <tbody>
          {% for club in clubs %}
              <tr>
                  <td>{{ club.label }}</td>
                   <td><a href="{{ path('app_admin_club_show', {'id': club.id}) }}" class="btn btn-info btn-sm">Voir</a></td> 
                  <td><a href="{{ path('app_admin_club_modify', {'id': club.id}) }}" class="btn btn-warning btn-sm">Modify</a></td>
                   <td><a href="{{ path('app_admin_club_delete', {'id': club.id}) }}" class="btn btn-danger btn-sm">Delete</a></td> 
               
              </tr>
          {% endfor %}
      </tbody>
  </table>
{% endblock %}