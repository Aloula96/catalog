{% extends 'base.html.twig' %}

{% block title %}Modify country {% endblock %}

{% block body %}
    <h1>Show the clubs</h1>
    
    <a href="{{ path('app_admin_country_add')}}" type="submit">Add a country</a>


    
    
    
      <table class="table table-striped">
          <thead>
              <tr>
                  <th>Country</th>
                  <th>Lire</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
              </tr>
          </thead>
          <tbody>
              {% for country in countrys %}
                  <tr>
                      <td>{{ country.label }}</td>
                       <td><a href="{{ path('app_admin_country_show', {'id': country.id}) }}" class="btn btn-info btn-sm">Voir</a></td> 
                       <td><a href="{{ path('app_admin_country_modify', {'id': country.id}) }}" class="btn btn-warning btn-sm">Modify</a></td>
                       <td><a href="{{ path('app_admin_country_delete', {'id': country.id}) }}" class="btn btn-danger btn-sm">Delete</a></td>  
                   
                  </tr>
              {% endfor %}
          </tbody>
      </table>





{% endblock %}